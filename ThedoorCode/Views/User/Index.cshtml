@*@model IEnumerable<ThedoorCode.Models.UserModel>*@
@model ThedoorCode.Models.UserViewModel

@{
    ViewData["Title"] = "Index";
}


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-sm-6">
            <h2 class="text-primary">User List</h2>
        </div>
        <div class="col-sm-6 text-end">
            <a asp-controller="User" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New User
            </a>
        </div>
    </div>
</div>
<br />
<br />

<form asp-controller="User" asp-action="Index" method="get">
    <p>

        <select asp-for="TotalExperience" asp-items="Model.UserQualification">
            <option value="">All</option>
        </select>

        Title: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>
<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserModel[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserModel[0].Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserModel[0].Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserModel[0].Qualification)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserModel[0].TotalExperience)
                
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserModel[0].PhotoUrl)
            </th>
            
            <th class="text-md-center">Modify</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.UserModel)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Qualification)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalExperience)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhotoUrl)
            </td>
            <td class="text-center">
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.UserId">Edit</a>
                <a class="btn btn-secondary" asp-action="Details" asp-route-id="@item.UserId">Details</a> 
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.UserId">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>

